{
  "$schema": "https://opencode.ai/config.json",
  "theme": "kanagawa",
  "autoupdate": true,

  "agent": {
    "plan": {
      "model": "ollama/qwen3-32b-16k:latest",
      "tools": {
        "write": false,
        "edit": false,
        "bash": false
      }
    },
    "build": {
      "model": "ollama/qwen3-coder-30b-16k:latest",
      "tools": {
        "write": true,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true,
        "skill": true,
        "todowrite": true,
        "todoread": true,
        "bash": true,
        "webfetch": true,
        "edit": true
      }
    }
  },

  "provider": {
    "ollama": {
      "npm": "@ai-sdk/openai-compatible",
      "name": "Ollama (local)",
      "options": {
        "baseURL": "http://localhost:11434/v1"
      },
      "models": {
        "qwen3-32b-16k:latest": {
          "name": "qwen3-32b-16k:latest"
        },
        "qwen3-coder-30b-16k:latest": {
          "name": "qwen3-coder-30b-16k:latest"
        }
      }
    }
  }
}
